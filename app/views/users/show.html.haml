#page-wrapper
  .row
    .page-header
      %h1
        User Management
        %small Show user
    .page-container        
      
      %h2
        %i.icon-info-sign
        
        %a
          %i.icon-refresh.icon_reset

      .container-fluid
        .row
          .col-lg-12 
          - if !@profile.firstname.nil?
            %p 
              %b First Name:
              =@profile.firstname
              
          - if !@profile.lastname.nil?
            %p 
              %b Last Name:
              =@profile.lastname
              
          - if !@profile.contact_no.nil?
            %p 
              %b Contact No:
              =@profile.contact_no
              
          - if !@profile.address.nil?
            %p 
              %b Address:
              =@profile.address
          
          - if !@profile.city.nil?
            %p 
              %b City:
              =@profile.city
          
          - if !@profile.state.nil?
            %p 
              %b State:
              =@profile.state
              
          - if !@profile.zip_code.nil?
            %p 
              %b Zip code:
              =@profile.zip_code
              
          - if !@profile.country.nil?
            %p 
              %b Country:
              =@profile.country

            
      
                                          
            = debug @user 
            = debug @profile
