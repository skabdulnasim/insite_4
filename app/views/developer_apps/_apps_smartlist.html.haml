- unless smart_listing.empty?
  - smart_listing.collection.each do |object|
    .product-card.col-lg-3.col-xs-12.col-sm-12.padding-5
      .card.waves-effect.waves-light
        .card-content.padding-5
          .col-lg-3.p0
            %center
              %i.mdi-action-settings-cell.medium{:class => "#{object.is_active ? 'green-text' : 'grey-text'}"}
          .col-lg-9.p0
            %h5.margin-b-2
              = link_to object.name, object, :class => "grey-text text-darken-2 font-bold"
              = link_to 'Edit', edit_developer_app_path(object), :class => "grey-text text-darken-1 float-r"

            %small="App ID: #{object.id}"
          .clearfix

  .clearfix
  .row
    = smart_listing.paginate
    = smart_listing.pagination_per_page_links
  %br
- else
  .alert.alert-warning
    No apps found        