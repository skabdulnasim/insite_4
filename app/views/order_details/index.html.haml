%h1 Listing order_details

%table
  %tr
    %th Menu product
    %th Menu product name
    %th Quantity
    %th Repeat quantity
    %th
    %th
    %th

  - @order_details.each do |order_detail|
    %tr
      %td= order_detail.menu_product_id
      %td= order_detail.menu_product_name
      %td= order_detail.quantity
      %td= order_detail.repeat_quantity
      %td= link_to 'Show', order_detail
      %td= link_to 'Edit', edit_order_detail_path(order_detail)
      %td= link_to 'Destroy', order_detail, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

