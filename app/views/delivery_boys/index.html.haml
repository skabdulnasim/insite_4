- if notice 
  .alert.alert-success.alert-dismissible{:role => "alert"}
    %span.fa-stack.fa-lg
      %i.fa.fa-circle.fa-stack-2x
      %i.fa.fa-check.fa-stack-1x.fa-inverse
    %button.close{"data-dismiss" => "alert", :type => "button"}
      %span{"aria-hidden" => "true"} &times;
      %span.sr-only Close
    = notice
%h4
  Listing Delivery Persons
  %a.m-btn.blue.right.font-14.margin-l-5.waves-effect.waves-light{:href => assign_order_delivery_boys_path}
    Assign Order
  %a.m-btn.blue.right.font-14.margin-l-5.waves-effect.waves-light{:href => assign_return_delivery_boys_path}
    Assign Return
  %a.m-btn.blue.right.font-14.margin-l-5.waves-effect.waves-light{:href => new_delivery_boy_path}
    Add New Delivery Person
.clearfix
%br
.divider          
%table.data-table
  %thead
    %tr
      %th Name
      %th Email
      %th Phone No
      %th Address
      %th Order Assigned
      %th Actions

  - @delivery_boys.each do |delivery_boy|
    %tbody
      %tr
        %td= delivery_boy.name
        %td= delivery_boy.email
        %td= delivery_boy.phone_no
        %td= delivery_boy.address
        %td= delivery_boy.orders.orders_assigned_delivery_boy(delivery_boy.id).count
        %td            
          %a.btn.btn-sm.btn-success{:href => "#{delivery_boy_path(delivery_boy)}", :title => "View Delivery Boy"}
            %i.fa.fa-search-plus.fa-lg  
          %a.btn.btn-sm.btn-info{:href => "#{edit_delivery_boy_path(delivery_boy)}", :title => "Edit Delivery Boy"} 
            %i.fa.fa-edit.fa-lg      
          %a.btn.btn-sm.btn-danger{:href => "#{delivery_boy_path((delivery_boy))}",:method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :title => "Delete Delivery Boy"}
            %i.fa.fa-trash-o.fa-lg
      

        
