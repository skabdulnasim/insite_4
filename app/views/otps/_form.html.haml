= form_for @otp do |f|
  - if @otp.errors.any?
    #error_explanation
      %h2= "#{pluralize(@otp.errors.count, "error")} prohibited this otp from being saved:"
      %ul
        - @otp.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :phone_number
    = f.text_field :phone_number
  .field
    = f.label :otp
    = f.text_field :otp
  .field
    = f.label :verified
    = f.check_box :verified
  .actions
    = f.submit 'Save'
