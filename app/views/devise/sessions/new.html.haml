.row.mt50
	#login-page
		.blue.col.l10.devise-shared-links
			.text-center
				= link_to I18n.t(:label_forgot_password), new_password_path('user'), :class => "blue-text text-lighten-5"
		.card-panel.z-depth-4.login-panel
			.row.mt50
				.center
					= image_tag "logo_insite2.png", :height => "40px"
			.row.mt50
				= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
					.input-field.col.s12
						%i.material-icons.prefix email
						= f.email_field :email, :id => 'icon_email', :required=>true, autofocus: true, class: "validate"
						%label{:for => "icon_email"}=I18n.t(:label_email)
					.input-field.col.s12
						%i.material-icons.prefix lock
						= f.password_field :password, :id => 'icon_password', :required=>true
						%label{:for => "icon_password"}=I18n.t(:label_password)
					.input-field
						.col.l6.m6
							- if devise_mapping.rememberable?
								%div
									= f.check_box :remember_me
									= f.label :remember_me					
						.col.l6.m6
							= f.submit I18n.t(:label_login),  class: "btn waves-effect waves-light blue right"
	
