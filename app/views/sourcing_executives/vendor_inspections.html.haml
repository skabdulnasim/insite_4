- manual_load_javascript "templates/inspections/question_answer_details"

- links_arr = [{:title=>"All Vendor Inspections",:url=>"#",:active_class=>"col-breadcrumb-selected"},] 
= render "layouts/flash"
.col-sm-12.padding-5
  .main-section__content
    .example
      .example__content.p0.min-height-405
        .data-table{"aria-multiselectable" => "true", :role => "tablist"}
          %header.data-table-header
            .data-table-header__label
              %span.fs-title
                = smart_listing_controls_for(:vendor_inspections, {class: "text-left"}) do 
                  .col-lg-3
                    .form-group.filter.input-append
                      .input-group
                        %input.form-control.search{:placeholder => "Search User...", :type => "text", :name=> "user_filter", :style=>"width:250px; margin-top:15px;"}
                          %span.input-group-btn
                            %button.btn.btn-primary.disabled{:type => "submit", :style=>"margin-top:15px;" }
                              %span.glyphicon.glyphicon-search
                  .col-lg-3{:style=>"margin-left:100px;"}
                    .form-group.filter.input-append
                      .input-group
                        %input.form-control.search{:placeholder => "Search Vendor...", :type => "text", :name=> "vendor_filter", :style=>"width:250px; margin-top:15px;"}
                          %span.input-group-btn
                            %button.btn.btn-primary.disabled{:type => "submit", :style=>"margin-top:15px;" }
                              %span.glyphicon.glyphicon-search                                                       
          = smart_listing_render :vendor_inspections
.clearfix