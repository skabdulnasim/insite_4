- manual_load_javascript "templates/proformas/order_details", "templates/orders/print_order_details"  
= render "layouts/flash"
.clearfix
.col-sm-3.padding-5
  .card
    .padding-10
      %b FILTER BY
    = smart_listing_controls_for(:proformas, {class: "text-left"}) do
      .filter-title.margin-t-b-0
        %i.mdi-action-search.left
        Search
      .padding-10
        .form-group.filter.input-append
          .input-group
            %input.form-control.search{:placeholder => "Search by Proforma ID...", :type => "text", :name=> "id_filter"}
              %span.input-group-btn
                %button.btn.btn-primary.disabled{:type => "submit" }
                  %span.glyphicon.glyphicon-search

.col-sm-9.padding-5
  = smart_listing_render :proformas

