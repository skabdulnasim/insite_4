/ login Modal
#loginModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "loginModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog{:style=>"width:350px"}
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
        %h4#loginModalLabel.modal-title Login to Hungry Leopard
      .modal-body
        %a.btn.btn-primary.btn-block{:href=>"#"}
          Login with facebook
        %a.btn.btn-danger.btn-block{:href=>"#"}
          Login with Google+
        %a.btn.btn-info.btn-block{:href=>"#"}
          Login with Skype
          
      .modal-footer
        %button.btn.btn-success{"data-dismiss" => "modal", :type => "button"} Sign Up
        %button.btn.btn-primary{:type => "button"} Login
        
/ map Modal
#mapModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "mapModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} &times;
        %h4#mapModalLabel.modal-title Select your location
      .modal-body
        Select your location using google map and we will find food for you.
        %div{:style => "width: 100%;"}
          #geolocation{:style => "width: 100%; height: 380px;"}
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
        %button.btn.btn-primary{:type => "button"} Go!