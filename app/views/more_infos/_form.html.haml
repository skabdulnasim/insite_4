= form_for @more_info do |f|
  - if @more_info.errors.any?
    #error_explanation
      %h2= "#{pluralize(@more_info.errors.count, "error")} prohibited this more_info from being saved:"
      %ul
        - @more_info.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
