:javascript
  $(function() {
    $('#from_date').datetimepicker({
      format: 'YYYY-MM-DD',
      useCurrent: false,
    });
    $('#to_date').datetimepicker({
      format: 'YYYY-MM-DD',
      useCurrent: false,
    });
  });
- links_arr = [{:title=>"Inventory Report",:url=>inventory_reports_path,:active_class=>""},{:title=>"Stock Purchase Summary Report",:url=>"#",:active_class=>"col-breadcrumb-selected"}] 
- render_page_breadcrumbs(links_arr)  #ApplicationHelper  
= render "layouts/flash"
.main-section__content
  .example
    .example__content.p0.min-height-405
      .data-table-container#accordion{"aria-multiselectable" => "true", :role => "tablist"}
        %header.data-table-header
          .data-table-header__label
            = smart_listing_controls_for(:unit_stock_purchase_summery, {class: "form-inline float-l margin-l-30"}) do    
              .form-group.from_date.input-append.stock-report-input
                = hidden_field_tag :units, '', :value=>"#{@unit_arr}"  
                = select_tag "unit_ids", options_from_collection_for_select(@all_unit, "id", "unit_name"),class: "form-control",prompt: "Select Branch"     
              .form-group.from_date.input-append.stock-report-input
                = text_field_tag :from_date, '', class: "search form-control form-control-small-pad stock-from-date", placeholder: "From Date", autocomplete: :off, :style => "padding: 6px 10px;", :value=>params[:from_date]
              .form-group.from_date.input-append.stock-report-input
                = text_field_tag :to_date, '', class: "search form-control form-control-small-pad stock-to-date", placeholder: "To Date", autocomplete: :off, :style => "padding: 6px 10px;", :value=>params[:to_date]
          .data-table-header__actions
            %a.btn.dropdown-button{"data-activates" => "dropdown2", :href => "#!"}
              Export
              %i.mdi-navigation-arrow-drop-down.right
            %ul#dropdown2.dropdown-content
              %li.width-100
                %a.export-indent-report{:href=>"/inventory_reports/unit_wise_stock_purchase_summary.pdf?from_date=#{params[:from_date]}&to_date=#{params[:to_date]}&units=#{params["unit_ids"]}"}
                  PDF
              %li.width-100
                %a.export-indent-report{:href=>"/inventory_reports/unit_wise_stock_purchase_summary.csv?from_date=#{params[:from_date]}&to_date=#{params[:to_date]}&units=#{params["unit_ids"]}"}
                  CSV              
        = smart_listing_render :unit_stock_purchase_summery
          

