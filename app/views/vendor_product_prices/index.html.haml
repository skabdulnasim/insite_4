:css
	#map-canvas {
		width: 75%;
		height: 70%;
		border: 10px solid #fff;
		border-radius: 15px;
		box-shadow: 0 0 17px rgba(0,0,0,5);
		z-index: 999
		float: right
	}
	#show { padding: 1em; font-size: 1.2em; }
	.overlay {
		position: fixed;
		top: 0; 
		left: 0;
		z-index: 10;
		background-color: rgba(0,0,0,0.5);
		width: 100%; 
		height: 100%;
		display: none;
	}
	.overlay-bg {
		background-color: rgba(0,0,0,0.5);
		width: 100%; 
		height: 100%;
		z-index: 11;
	}
	.center {
		margin: auto;
		position: absolute;
		top: 0; left: 15%; bottom: 0; right: 0;
	}
	.show { display: block; }
.overlay
	#map-canvas.center
	.overlay-bg    
	%script{:src => "https://maps.googleapis.com/maps/api/js?v=3.exp&key=AIzaSyDz0LX0g0LOQAJDit-o4LPGmLLzYHJ07CE", :type => "text/javascript"}
.main-section__content
	.example
		.example__content.p0
			.data-table-container
				%header{:style=>'position:fixed;background: #555;z-index:1;margin-top:-18px;width: 79%;'}
					.row
						.col-lg-3
							.margin-t-15
								%span.fs-title.text_white.margin-l-15 Vendor Contract Details
						.left.margin-t-15.col-lg-9
							= smart_listing_controls_for(:vendor_product_prices, {class: "text-left"}) do
								.col-lg-3
									.form-group.filter.input-append
										.input-group
											%input.form-control.search{:placeholder => "Search vendor..", :type => "text", :name=> "vendor_filter"}
												%span.input-group-btn
													%button.btn.btn-primary.disabled{:type => "submit" }
														%span.glyphicon.glyphicon-search 
								.col-lg-3
									.form-group.filter.input-append
										.input-group
											%input.form-control.search{:placeholder => "Search product..", :type => "text", :name=> "product_filter"}
												%span.input-group-btn
													%button.btn.btn-primary.disabled{:type => "submit" }
														%span.glyphicon.glyphicon-search
								.col-lg-2	
									.form-group.filter.input-append
										.input-group
											= select_tag "approval_status", options_for_select(VendorProductPrice::STATUSES.map{ |_status| [ "#{_status}", "#{_status}"] }),class: "form-control", prompt: 'Select Status'
								.col-lg-4
									.form-group.filter.input-append
										.input-group{:style=>'display:flex;'}
											.text_white
												= 'Sort by'
											= select_tag "sort_by", options_for_select('Price: Low to High'=>'price_asc','Price: High to Low'=>'price_desc'),class: "form-control", prompt: 'Featured'
				.margin-t-65
					= smart_listing_render :vendor_product_prices