= form_for @user_work_status do |f|
  - if @user_work_status.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user_work_status.errors.count, "error")} prohibited this user_work_status from being saved:"
      %ul
        - @user_work_status.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :work_status
    = f.text_field :work_status
  .field
    = f.label :remarks
    = f.text_area :remarks
  .field
    = f.label :latitude
    = f.text_field :latitude
  .field
    = f.label :longitude
    = f.text_field :longitude
  .field
    = f.label :recorded_at
    = f.datetime_select :recorded_at
  .actions
    = f.submit 'Save'
