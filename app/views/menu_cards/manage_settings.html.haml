= render "layouts/flash"
.panel.panel-default
  .panel-heading
    Combination rules
    %button.btn.btn-primary.btn-xs.float-r{"data-target" => "#CombinationRuleAdAddmodal", "data-toggle" => "modal"} 
      %i.fa.fa-plus-square
      Add new rule
  .panel-body
    .row.col-sm-10
      %table.table.table-bordered
        %tr.well
          %th Rule name          
          %th Minimum quantity
          %th Maximum quantity
          %th Actions
        - @com_rules.each do |rules|
          %tr
            %td= rules.name
            %td= rules.min_qty
            %td= rules.max_qty    
            %td          
              %a.btn.btn-sm.btn-info.edit-product{:href => "#{edit_combinations_rule_path(rules)}", :title => "Edit rule"} 
                %i.fa.fa-edit.fa-lg
            
              %a.btn.btn-sm.btn-danger{:href => "#{combinations_rule_path(rules)}",:method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :title => "Delete rule"}
                %i.fa.fa-trash-o.fa-lg
                
#CombinationRuleAdAddmodal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content        
      .modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} &times;
          %span.sr-only Close
        %h4#CombinationRuleAdAddmodalLabel.modal-title Add new combinations rule
      .modal-body{:style => "min-height: 200px;"}                
        = render 'combinations_rules/form'                                   
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close              
     
.panel.panel-default
  .panel-heading
    Combination types
    %button.btn.btn-primary.btn-xs.float-r{"data-target" => "#CombinationTypeAdAddmodal", "data-toggle" => "modal"} 
      %i.fa.fa-plus-square
      Add new type
  .panel-body
    .row.col-sm-10
      %table.table.table-bordered
        %tr.well
          %th Rule name          
          %th Actions
        - @com_types.each do |types|
          %tr
            %td= types.name    
            %td          
              %a.btn.btn-sm.btn-info.edit-product{:href => "#{edit_combination_type_path(types)}", :title => "Edit rule"} 
                %i.fa.fa-edit.fa-lg
            
              %a.btn.btn-sm.btn-danger{:href => "#{combination_type_path(types)}",:method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :title => "Delete rule"}
                %i.fa.fa-trash-o.fa-lg           


        
#CombinationTypeAdAddmodal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content        
      .modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} &times;
          %span.sr-only Close
        %h4#CombinationRuleAdAddmodalLabel.modal-title Add new combinations type
      .modal-body{:style => "min-height: 200px;"}                
        = render 'combination_types/form'                                   
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
        
  -###################################################End of Combination Rule##########################################################
        

