= form_for @customer_state do |f|
  - if @customer_state.errors.any?
    #error_explanation
      %h2= "#{pluralize(@customer_state.errors.count, "error")} prohibited this customer_state from being saved:"
      %ul
        - @customer_state.errors.full_messages.each do |msg|
          %li= msg
  .col-sm-4        
    .form-group
      .col-sm-4
        = f.label :name
      .col-sm-4
        = f.text_field :name
    %br
    .form-group
      .col-sm-4
        = f.label :icon
      .col-sm-4  
        = f.file_field :icon
    %br
    .form-group
      .col-sm-4
        = f.label :status
      .col-sm-4
        = f.select :status, options_for_select({"Active" => "active","Inactive" => "inactive"},@customer_state.status), { include_blank: "Select Status"}, {:class => "form-control", :required=> true,:style=>"width:150px;"} 
    %br
    .form-group
      .col-sm-4
        = f.label :color
      .col-sm-4
        = f.text_field :color, :type=>"color" , :style=>"width:150px;"
    %br
    .actions
      = f.submit 'Save' ,:class=>"btn btn-success"
