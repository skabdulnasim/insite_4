        / %i.mdi-action-view-list.right.md.amber-text.text-darken-2
      .clearfix
      %br
      %div{:style=>"min-height:200px;"}
        %canvas#sales-area-canvas{:height => "160", :width => "700"}
      .clearfix
  .card-content.darken-2

