= form_for @allergy do |f|
  - if @allergy.errors.any?
    #error_explanation
      %h2= "#{pluralize(@allergy.errors.count, "error")} prohibited this allergy from being saved:"
      %ul
        - @allergy.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
