- manual_load_javascript "jquery.geocomplete"
%script{:src => "http://maps.googleapis.com/maps/api/js?libraries=places&key=AIzaSyBq5JlSzFQkPFTx5kT7w-d2gRzwZzeO8Y8"}
:javascript
  $( document ).ready(function() {
    $("#unit_address").geocomplete()
  });
  
.row.m0
  .col.l7.s12
    %h4.black-text.mb20
      = image_tag("logo_insites.png", :height => "30px")    
    .p20-50
      %h4.font-weight-200 Add branches/units/locations under different branch types
      %p.grey-text.font-12.font-weight-300
        Based on organization hierarchy you carated on eralier step you can add branches/units of your organization. Also you can manage sections, stores and SORTs of every branch frm here.
      .mt30.min-height-300
        %ul#branch-card.timeline.collapse-lg.timeline-hairline.timeline-parent
          = render :partial => 'units/nested_unit', :object => current_user.unit, :as => 'unit'
      .center.mt30
        %a.btn-large.blue.waves-effect.waves-light{:href=>previous_wizard_path}
          Previous
          %i.left.material-icons keyboard_arrow_left
        %a.btn-large.blue.waves-effect.waves-light{:href=>next_wizard_path}
          Next
          %i.right.material-icons keyboard_arrow_right
  .col.l5.s12.green-2.right-sidebar.hide-on-med-and-down
    = render 'progress'
    .row
      = image_tag("sections_re.png", class: "right")
:css
  .circular-progress svg:nth-child(2) path {
    stroke: rgba(19, 236, 128, 1);
  }
#new_unit_modal.modal.modal-lg.modal-fixed-footer
  .modal-content
    %h5.font-weight-300
      ="Add New Branch/Unit"
    #form_explanation
    #new_unit_form
    #created_unit_list.row
  .modal-footer
    %a.modal-action.modal-close.waves-effect.btn-flat{:href => "#!"} Close    
    
#edit_unit_modal.modal.modal-lg.modal-fixed-footer
  .modal-content
    %h5.font-weight-300
      ="Edit Branch/Unit"
    #edit_form_explanation
    #edit_unit_form
  .modal-footer
    %a.modal-action.modal-close.waves-effect.btn-flat{:href => "#!"} Close     