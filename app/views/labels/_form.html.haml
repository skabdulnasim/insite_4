= form_for @label do |f|
  - if @label.errors.any?
    #error_explanation
      %h2= "#{pluralize(@label.errors.count, "error")} prohibited this label from being saved:"
      %ul
        - @label.errors.full_messages.each do |msg|
          %li= msg
  .col-sm-4
    .form-group
      .col-sm-4
        = f.label "Type"
      .col-sm-4
        = f.select :customer_state, options_for_select({"Customer" => "customer", "Prospect" => "prospect"}, @label.customer_state), {include_blank: "select type"},{ :class=>"form-control", :required=> true,:style=>"width:150px;" }
    %br
    %br    
    .form-group
      .col-sm-4
        = f.label :name
      .col-sm-4
        = f.text_field :name, :required=> true
    %br
    .form-group  
      .col-sm-4
        = f.label :icon
      .col-sm-4  
        = f.file_field :icon, :required=> true
    %br
    .form-group
      .col-sm-4
        = f.label "Customer status", :class=> "col-sm-2 control-label"
    %br
    .col-sm-4
      .switch
        %label
          Inactive
          = f.check_box :status, :required=> true
          %span.lever
          Active
    %br
    %br
    .actions
      = f.submit 'Save',:class=>"btn btn-success"

