= form_for @combo_item do |f|
  - if @combo_item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@combo_item.errors.count, "error")} prohibited this combo_item from being saved:"
      %ul
        - @combo_item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :menu_product_id
    = f.text_field :menu_product_id
  .field
    = f.label :item_id
    = f.number_field :item_id
  .field
    = f.label :tax_group_id
    = f.number_field :tax_group_id
  .field
    = f.label :sell_price
    = f.text_field :sell_price
  .field
    = f.label :sell_price_without_tax
    = f.text_field :sell_price_without_tax
  .field
    = f.label :mode
    = f.number_field :mode
  .field
    = f.label :size_id
    = f.number_field :size_id
  .field
    = f.label :color_id
    = f.number_field :color_id
  .actions
    = f.submit 'Save'
