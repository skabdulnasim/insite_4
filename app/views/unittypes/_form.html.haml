= form_for @unittype, remote: true do |t|
  - if @unittype.errors.any?
    #error_explanation.alert.alert-danger2.alert-dismissible
      %button.close{"data-dismiss" => "alert", :type => "button"}
        %span{"aria-hidden" => "true"} &times;
      = "#{pluralize(@unittype.errors.count, "error")} prohibited this product from being saved."
  .input-field
    = t.text_field :unit_type_name, :class=>"validate m0", :placeholder=> "Enter branch type name", :autofocus=>true
  .input-field
    %button.btn.green.green-text.text-lighten-5.waves-effect.waves-light{:type=>"submit"}
      Save
    %a.btn.white.grey-text.close-unittype-form
      Cancel
