= form_for @party do |f|
  - if @party.errors.any?
    #error_explanation
      %h2= "#{pluralize(@party.errors.count, "error")} prohibited this party from being saved:"
      %ul
        - @party.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :owner_id
    = f.number_field :owner_id
  .field
    = f.label :date_time
    = f.datetime_select :date_time
  .field
    = f.label :unique_code
    = f.text_field :unique_code
  .actions
    = f.submit 'Save'
