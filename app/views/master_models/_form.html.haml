= form_for @master_model do |f|
  - if @master_model.errors.any?
    #error_explanation
      %h2= "#{pluralize(@master_model.errors.count, "error")} prohibited this master_model from being saved:"
      %ul
        - @master_model.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :status
    = f.text_field :status
  .actions
    = f.submit 'Save'
