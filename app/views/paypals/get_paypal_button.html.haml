!!!
%html
  %head
    %meta{:charset => "utf-8"}
      %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
      %meta{:content => "#4285f4", :name => "theme-color"}
      %meta{:content => "Yottolabs", :name => "author"}
      %title= " #{I18n.t('brand.name')} | #{I18n.t('brand.parent')}"
      // Loading Essential JS files in header
      = javascript_include_tag "application", "registrations"
      / Import Google Icon Font
      %link{:href => "http://fonts.googleapis.com/icon?family=Material+Icons", :rel => "stylesheet"}
      / Compiled and minified CSS
      %link{:href => "https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.5/css/materialize.min.css", :rel => "stylesheet"}
      / Compiled and minified JavaScript
      %script{:src => "https://www.paypalobjects.com/api/checkout.js"}
      
  %body.signup-container
    %main
      /= yield
      #paypal-button-container
  %footer
    :javascript
      $(document).ready(function() {
        $('select').material_select();
        Materialize.toast("#{notice}", 5000);
        Materialize.toast("#{alert}", 5000, 'rounded');
      });    
