= form_for [@report_folder,@custom_report] do |f|
  - if @custom_report.errors.any?
    #error_explanation
      %h2= "#{pluralize(@custom_report.errors.count, "error")} prohibited this custom_report from being saved:"
      %ul
        - @custom_report.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :query
    = f.text_area :query
  
  .actions
    = f.submit 'Save'
