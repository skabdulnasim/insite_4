= form_for @third_party_payment_option do |f|
  - if @third_party_payment_option.errors.any?
    #error_explanation
      %h2= "#{pluralize(@third_party_payment_option.errors.count, "error")} prohibited this third_party_payment_option from being saved:"
      %ul
        - @third_party_payment_option.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .form-group
    = f.label :status
    = f.select :status, options_for_select({"Active" => "active","Inactive" => "inactive"},@third_party_payment_option.status), { include_blank: "Select status"}     
  .actions
    = f.submit 'Save'
