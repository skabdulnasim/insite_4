= form_for @order_status, :html => { :class => 'form-horizontal'} do |f|
  - if @order_status.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order_status.errors.count, "error")} prohibited this status from being saved:"
      %ul
        - @order_status.errors.full_messages.each do |msg|
          %li= msg
  
  .form-group
    = f.label :name, :class => 'col-sm-2 control-label'
    .col-sm-4
      = f.text_field :name, :class => 'form-control'
  
  .form-group
    = f.label :description, :class => 'col-sm-2 control-label'
    .col-sm-4
      = f.text_field :description, :class => 'form-control'
      
  .form-group
    = f.label :color_code, :class => 'col-sm-2 control-label'
    .col-sm-2
      = f.text_field :color_code, :class => 'form-control', :type => "color"
      
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit 'Save', :class => 'btn btn-success btn-lg'   
      %a{:href => orders_manage_settings_path, :class => 'btn btn-primary btn-lg'}
        %i.icon-backward
        Cancel
