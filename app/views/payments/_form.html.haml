= form_for @payment, :html => { :class => 'form-horizontal'} do |f|
  - if @payment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@payment.errors.count, "error")} prohibited this payment from being saved:"
      %ul
        - @payment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :settlement_id
    = f.number_field :settlement_id
  .field
    = f.label :paymentmod_type
    = f.text_field :paymentmod_type
  .actions
    = f.submit 'Save'
