.main-section__content
  .example
    .example__content.p0.min-height-405
      .data-table-container
        %header.data-table-header
          .data-table-header__label
            %span.fs-title="shop wise sale report #{params[:from_date]} to #{params[:to_date]}" 
          .data-table-header__actions
            .form-group
              = smart_listing_controls_for(:shop_sales, {class: "form-inline float-l margin-l-30"}) do
                = hidden_field_tag :from_date, "#{params[:from_date]}"
                = hidden_field_tag :to_date, "#{params[:to_date]}"
                -if params[:unit_ids].present?
                  -params[:unit_ids].each do |u_id|
                    = hidden_field_tag "unit_ids[]",u_id  
                .form-group.filter.input-append
                  .input-group
                    %input.form-control.search.search-resource-sumary{:placeholder => "Search Shop...", :type => "text", :name=> "resource_filter"}
                      %span.input-group-btn
                        %button.btn.btn-default.disabled{:type => "submit" }
                          %span.glyphicon.glyphicon-search  
                = select_tag "store_id", options_for_select(@stores.collect{ |u| ["#{u.name}", u.id] }),class: "form-control store_id_for_shop_sales", prompt: 'Select Plant'

              - url = "#{shop_wise_sales_report_tsp_reports_path}.csv?from_date=#{params[:from_date]}&to_date=#{params[:to_date]}"
              - if params[:unit_ids].present?
                - params[:unit_ids].each do |u_id|
                  -url = url+"&unit_ids[]="+u_id     
              %a.m-btn.indigo.margin-l-5.export-shop-sales-report{:href=>url}
                %i.mdi-file-file-download.left
                CSV
      = smart_listing_render :shop_sales