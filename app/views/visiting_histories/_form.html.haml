= form_for @visiting_history do |f|
  - if @visiting_history.errors.any?
    #error_explanation
      %h2= "#{pluralize(@visiting_history.errors.count, "error")} prohibited this visiting_history from being saved:"
      %ul
        - @visiting_history.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :day
    = f.text_field :day
  .field
    = f.label :recorded_at
    = f.datetime_select :recorded_at
  .field
    = f.label :resource_id
    = f.number_field :resource_id
  .field
    = f.label :in_time
    = f.time_select :in_time
  .field
    = f.label :out_time
    = f.time_select :out_time
  .field
    = f.label :latitude
    = f.text_field :latitude
  .field
    = f.label :longitude
    = f.text_field :longitude
  .field
    = f.label :visiting_type
    = f.text_field :visiting_type
  .field
    = f.label :visting_reason
    = f.text_field :visting_reason
  .actions
    = f.submit 'Save'
