= form_for @form_of_payment do |f|
  - if @form_of_payment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@form_of_payment.errors.count, "error")} prohibited this form_of_payment from being saved:"
      %ul
        - @form_of_payment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
