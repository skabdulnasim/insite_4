<% if @address.new_record? %>
  Materialize.toast("Oops! <%= j @address.errors.full_messages.join(', ') %>", 3000,'round');
<% else %>
  Materialize.toast("Address was successfully added", 3000);
  $('#modal-data-container').html("");
  $('#modal-data-container').append("<%= j render(:partial => 'customers/customer', :object => @customer.reload, :as => 'customer') %>");
<% end %>