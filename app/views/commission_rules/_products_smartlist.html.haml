- unless smart_listing.empty?
  %table.data-table
    %tbody
      - smart_listing.collection.each do |object|
        %tr.data-table__selectable-row
          %td=object.name
          %td
            - _mp_commission_capping = object.menu_products.present? ? object.menu_products.last.commission_capping : ''
            %a.m-btn.green.float-r.m-btn-small.add-product-to-rule.waves-effect.waves-light{"data-product-id"=>object.id,"data-product-name"=>object.name,"data-product-unit"=>object.basic_unit,"data-mp-commission-capping"=>_mp_commission_capping}
              =t(:label_add)
  .padding-5
    = smart_listing.paginate
    = smart_listing.pagination_per_page_links
- else
  .alert.alert-warning
    No products found