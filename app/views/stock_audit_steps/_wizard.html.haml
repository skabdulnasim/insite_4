          %span.number 1
          %span.title Basic Input
      %li{"aria-disabled" => "false", "aria-selected" => "false", :role => "tab", :class=> "#{current_step=='step_2' ? 'current' : ''} #{(completed_steps.include? 'step_2') ? 'done' : ''}"}
        %a{:href => "#!"}
          %span.number 2
          %span.title Confirmation
