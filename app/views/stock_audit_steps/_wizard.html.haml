  .steps.clearfix
    %ul{:role => "tablist"}
      %li{"aria-disabled" => "false", "aria-selected" => "false", :role => "tab", :class=> "#{current_step=='step_1' ? 'current' : ''} #{(completed_steps.include? 'step_1') ? 'done' : ''}"}
