#showBulkStockPurchaseModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "showBulkStockPurchaseModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content.m-modal-content
      .modal-header.m-modal-header
        %button.close{"data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} &times;
          %span.sr-only Close
        %h4#showTransferOptionModalLabel.modal-title Bulk upload stocks
      .modal-body
        = form_tag(import_stock_purchases_path, method: "post",multipart: true, class: "form-horizontal bordered-row" ) do |b|
          = hidden_field_tag :store_id, @store.id    
          = hidden_field_tag :stock_transaction_id, @stock_purchase.id   
          = hidden_field_tag :stock_transaction_type, 'StockPurchase' 
          .form-group
            %label.col-sm-4.control-label Choose file
            .col-sm-8
              %input{:name => "file", :type => "file", :required => 'required'}
          .modal-footer
            %button.m-btn{"data-dismiss" => "modal", :type => "button"} Close          
            %input.m-btn.orange.large{:name => "commit", :type => "submit", :value => "Upload file", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Your all previous category data will be deleted. Are you sure?')) }}