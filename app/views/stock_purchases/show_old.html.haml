          .panel.panel-default
            .panel-body
              .col-md-6.center
                %h2
                  .bar-mrp
                %img{:src => "/assets/bar_code.jpg", :width=>"100%"}
                %br
                .bar-sku
              .col-md-6.center
                %h5
                  = @site_title
                .bar-mrp
                %img{:src => "/assets/bar_code.jpg", :width=>"100%"}
                %br
                .bar-sku          
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
        %button.btn.btn-primary{:type => "button", :class => "print-barcode"} Print

