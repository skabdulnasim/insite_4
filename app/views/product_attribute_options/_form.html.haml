= form_for @product_attribute_option do |f|
  - if @product_attribute_option.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product_attribute_option.errors.count, "error")} prohibited this product_attribute_option from being saved:"
      %ul
        - @product_attribute_option.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :product_attribute_key_id
    = f.text_field :product_attribute_key_id
  .field
    = f.label :value
    = f.text_field :value
  .field
    = f.label :label
    = f.text_field :label
  .field
    = f.label :position
    = f.number_field :position
  .field
    = f.label :deleted_at
    = f.datetime_select :deleted_at
  .actions
    = f.submit 'Save'
