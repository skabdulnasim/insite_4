
= form_for @table_type, :class =>'form-control' do |f|
  - if @table_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@table_type.errors.count, "error")} prohibited this table_type from being saved:"
      %ul
        - @table_type.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :type_name,:class => 'col-sm-2 control-label'
  .form-group
    .col-sm-8   
      = f.text_field :type_name,:class => 'form-control'
  .control-group
    .col-sm-offset-2.col-sm-10
      = f.submit 'Save', :class => 'btn btn-success btn-sm'   
