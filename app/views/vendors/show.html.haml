= render "layouts/flash"
- links_arr = [{:title=>"All Vendor",:url=>vendors_path,:active_class=>""},{:title=>"Vendor : #{@vendor.name}",:url=>"#",:active_class=>"col-breadcrumb-selected"}] 
- render_page_breadcrumbs(links_arr)  #ApplicationHelper 
%table.table.table-bordered
  %tr
    %th Name
    %th Address
    %th Phone
    %th Email
    %th Gst Hash
    %th Action

    %tr
      %td= @vendor.name
      %td= @vendor.address
      %td= @vendor.phone
      %td= @vendor.email
      %td= @vendor.gst_hash
      %td
        %a{:href => "#{edit_vendor_path(@vendor)}", :class => 'btn btn-primary btn-mini active'}
          %i.icon-edit
          Edit
        %a{:href => "#{vendors_path}", :class => 'btn btn-primary btn-mini active'}
          %i.icon-backward
          Back 
.col-sm-3.padding-5
  = render 'products/material_product_filter'
.col-sm-9.padding-5
  .main-section__content
    .example
      .example__content.p0.min-height-405
        .data-table-container#accordion{"aria-multiselectable" => "true", :role => "tablist"}
          %header.data-table-header
            .data-table-header__label
              %span.fs-title Products of vendor #{@vendor.name}
            %a.m-btn.m-btn-teal{:href => "#{add_vendor_products_vendor_path}"}
              %i.mdi-content-add.left
              %span.hidden-sm.hidden-xs Add products
          = smart_listing_render :products
