/ /.dropdown
%li.dropdown
  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
    %i.fa.fa-tasks.fa-fw
    %i.fa.fa-caret-down

  %ul.dropdown-menu.dropdown-tasks{ :style => "overflow-y : auto;max-height : 500px;"}
    - current_unit_order.each do |order|
      %li
        %a{:href => order_path(order)}
          %div
            %p
              %strong=  "# #{order.id}"
              %span.text-muted= "#{order.order_status.name}" 
              
              %strong.pull-right.text-muted= "@ #{order.created_at.strftime("%I:%M %p")}"
                           
            .progress.progress-striped.active
              .progress-bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "40", :role => "progressbar", :style => "width: #{show_percentage(order)}; background-color: #{order.order_status.color_code};"}
                %span.sr-only 40% Complete (success)
                = show_percentage(order)
      %li.divider
    %li
      %a.text-center{:href => orders_path}
        %strong See All Orders
        %i.fa.fa-angle-right
  
  / /.dropdown-tasks
/ /.dropdown
